<h1><%= t('Listing jobs') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('Title') %></th>
<!--      <th>About</th> -->
      <th><%= t('Spend Time') %></th>
      <th><%= t('Start Time') %></th>
      <th><%= t('Finish Time') %></th>
      <th><%= t('Executer') %></th>
      <th><%= t('Status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.spendtime %></td>
        <td><%= job.starttime %></td>
        <td><%= job.finishtime %></td>
        <td><%= job.user.name %></td>
        <td><%= job.status %></td>
        <td><%= link_to t('Show'), job %></td>
        <td><%= link_to t('Edit'), edit_job_path(job) %></td>
        <td><%= link_to t('Destroy'), job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

