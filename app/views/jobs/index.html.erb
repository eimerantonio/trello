<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>About</th>
      <th>Spend Time</th>
      <th>Start Time</th>
      <th>Finish Time</th>
      <th>Executer</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.about %></td>
        <td><%= job.spendtime %></td>
        <td><%= job.starttime %></td>
        <td><%= job.finishtime %></td>
        <td><%= job.user.name %></td>
        <td><%= job.status %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

