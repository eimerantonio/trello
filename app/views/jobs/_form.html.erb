<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= t('title') %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= t('about') %><br>
    <%= f.text_area :about %>
  </div>
  <div class="field">
    <%= t('spendtime') %><br>
    <%= f.datetime_select :spendtime %>
  </div>
  <div class="field">
    <%= t('starttime') %><br>
    <%= f.datetime_select :starttime %>
  </div>
  <div class="field">
    <%= t('finishtime') %><br>
    <%= f.datetime_select :finishtime %>
  </div>
  <div class="field">
    <%= t('user_id') %><br>
    <%= f.select :user_id, options_for_select(@users) %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= radio_button_tag 'status', '0', true%> Incompleto
    <%= radio_button_tag 'status', '1'%> Completo
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
